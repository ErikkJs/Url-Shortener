<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/css/landingPage.css" rel="stylesheet" type="text/css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>URL Shortner</title>
</head>

<body class="white">
    <nav>
        <div class="nav-wrapper" id="gradientBackground">
            <a href="#" class="brand-logo center">Url Shortener</a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 l6">
                <div class="form-wrapper">
                    <div class="row">
                        <div class="card-panel white z-depth-5">
                            <h5>Enter Url To Shorten</h5>
                            <p>Format must be: https://url.com or http://url.com</p>
                            <form method="POST" action="./shortenurl">
                                <div class="row">
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix">link</i>
                                        <input id="icon_prefix" type="url"
                                            pattern="http(s?)(:\/\/)((www.)?)([a-zA-z0-9\-_]+)(.com)" name="url"
                                            class="validate" required>
                                        <label for="icon_prefix">Link to Shorten</label>
                                    </div>
                                    <div class="input-field col s12 m12 l12">
                                        <button class="btn waves-effect waves-light pulse submit-button"
                                            id="gradientBackground" type="submit">Shorten Link
                                            <i class="material-icons right">create</i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12 m6 l6">
                <div class="url-content">
                    <div class="row">
                        <div class="card z-depth-5">
                            <ul class="collapsible">
                                <% allUrls.forEach(url => { %>
                                <li>
                                    <div class="collapsible-header">
                                        <i class="material-icons">link</i>
                                        <%= url.entireUrl %>
                                        <span class="new badge" id="gradientBackground"
                                            data-badge-caption="<%=url.clicks %>">Url
                                            Clicks:
                                        </span>
                                    </div>
                                    <div class="collapsible-body">
                                        <div class="row">
                                            <div class="col s3 m3 l3 text-center">
                                                Short Url:
                                            </div>
                                            <div class="col s9 m9 l9">
                                                <a href="<%= url.shortenedUrl%>">
                                                    localhost:5000/<%= url.shortenedUrl%></a>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s3 m3 l3 text-center">
                                                Date Created:
                                            </div>
                                            <div class="col s9 m9 l9">
                                                <%= url.date %>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s3 m3 l3 text-center">
                                                Clicks:
                                            </div>
                                            <div class="col s9 m9 l9">
                                                <%= url.clicks %>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <%  }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();
    })
</script>

</html>